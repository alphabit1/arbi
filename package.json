{
  "name": "arbi",
  "version": "0.0.1",
  "main": "app.js",
  "author": "alphabit1",
  "license": "private",
  "type": "commonjs",
  "description": "Arbitrage things",
  "repository": "https://github.com/alphabit1/arbi",
  "scripts": {
    "lint": "eslint -c .eslintrc.json --fix 'src/**/*.ts' 'test/**/*.test.ts'",
    "clean": "rm -rf coverage dist .nyc_output",
    "build": "npm run clean && tsc",
    "start": "npm run build && NODE_ENV='production' node dist/app.js",
    "dev": "tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 dist/app.js' | pino-pretty -t 'SYS:HH:MM:ss' -i hostname",
    "test": "npm run build && mocha",
    "coverage": "npm run build && nyc mocha"
  },
  "dependencies": {
    "@types/pino": "^6.3.4",
    "binance": "^1.3.5",
    "ccxt": "^1.38.15",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "spinnies": "^0.5.1",
    "threads": "^1.6.3",
    "yargs": "^16.1.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@types/yargs": "^15.0.10",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-typescript-prettier": "^3.1.0",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^3.9.6"
  }
}
